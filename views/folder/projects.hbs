<h1 style="font-size: 2.5rem;">Welcome to Cooll2 </h1>
<br>
<h2 style="font-size: 1.5rem;">Here you can find all the projects listed</h2>
<br><br>
<section class="projects_section">
  {{#each projects as |project|}}
  

<div class="card">
  <div class="card-content">
    <p class="title">
      {{name}}
    </p>

  </div>
  <footer class="card-footer">
    <p class="card-footer-item">
      <span>
        <a href="/projects/{{_id}}">View More and Join</a>
      </span>
    </p>
  </footer>
</div>



  {{/each}}
</section>
<br><br>
<button onclick="location.href='/'">Home</button> 
<br><br>
<button onclick="location.href='/create'">Create New Post Project</button>

